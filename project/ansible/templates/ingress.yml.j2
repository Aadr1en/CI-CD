apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ react-devops-app }}-ingress
  namespace: {{ namespace }}
  annotations:
    kubernetes.io/ingress.class: nginx
    cert-manager.io/cluster-issuer: letsencrypt-prod
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
spec:
  tls:
  - hosts:
    - {{ react-devops-app }}.example.com
    secretName: {{ react-devops-app }}-tls
  rules:
  - host: {{ react-devops-app }}.example.com
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: {{ react-devops-app }}-service
            port:
              number: 80